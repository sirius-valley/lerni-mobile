{
  "name": "lerni-mobile",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "start:clear-cache": "expo start -c",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "prepare": "husky install",
    "eslint": "eslint --fix .",
    "prettier": "prettier . --write ",
    "format": "npm run prettier && npm run eslint",
    "build:test:android": "eas build --profile test --platform android",
    "build:test:ios": "eas build --profile test --platform ios",
    "test:android": "mocha -r ts-node/register -r dotenv/config 'integration-tests/android/tests/*.ts' --timeout 0",
    "test:ios": "mocha -r ts-node/register -r dotenv/config 'integration-tests/ios/tests/*.ts' --timeout 0",
    "test": "mocha -r ts-node/register -r dotenv/config --timeout 0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier && npm run eslint"
    }
  },
  "dependencies": {
    "@expo/vector-icons": "^13.0.0",
    "@marko19907/string-to-color": "^1.0.0",
    "@react-native-async-storage/async-storage": "1.18.2",
    "@react-native-community/hooks": "^3.0.0",
    "@reduxjs/toolkit": "^2.0.1",
    "expo": "~49.0.15",
    "expo-blur": "~12.4.1",
    "expo-constants": "~14.4.2",
    "expo-font": "~11.4.0",
    "expo-linking": "~5.0.2",
    "expo-router": "^2.0.0",
    "expo-secure-store": "~12.3.1",
    "expo-status-bar": "~1.6.0",
    "formik": "^2.4.5",
    "jwt-decode": "^4.0.0",
    "polished": "^4.2.2",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "react-native-confetti-cannon": "^1.5.2",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-image-zoom-viewer": "^3.0.1",
    "react-native-progress": "^5.0.1",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-svg": "14.1.0",
    "react-redux": "^9.0.4",
    "react-timer-hook": "^3.0.7",
    "redux-persist": "^6.0.0",
    "styled-components": "^6.1.4",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/mocha": "^10.0.6",
    "@types/react": "~18.2.14",
    "@types/react-native-keyboard-spacer": "^0.4.6",
    "@types/redux-persist": "^4.3.1",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@wdio/types": "^8.32.4",
    "appium": "^2.5.1",
    "appium-uiautomator2-driver": "^3.0.2",
    "appium-xcuitest-driver": "^7.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.0",
    "mocha": "^10.3.0",
    "prettier": "^3.1.1",
    "typescript": "^5.1.3",
    "webdriverio": "^8.33.1"
  },
  "private": true
}
